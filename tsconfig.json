{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    },
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./scripts/**/*",
    "./build-deps/**/*",
    "./configure-env/**/*",
    "test/**/*"
  ],
  "ts-node": {
    "swc": true
  },
  "display": "Recommended",
  "$schema": "https://json.schemastore.org/tsconfig"
}
